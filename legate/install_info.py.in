from __future__ import annotations

def get_libpath(lib_base_name: str, full_lib_name: str) -> str:
    from os.path import join, exists, dirname
    import sys
    import platform

    lg_path = dirname(dirname(__file__))
    so_ext = {
        "": "",
        "Java": ".jar",
        "Linux": ".so",
        "Darwin": ".dylib",
        "Windows": ".dll"
    }[platform.system()]

    def find_liblgcore(libdir):
        def lib_exists(path: str) -> bool:
            return exists(join(libdir, path))

        for name in (
            full_lib_name,
            f"{lib_base_name}{so_ext}",
            f"liblgcore{so_ext}",
        ):
            if lib_exists(name):
                return libdir
        return None

    from .util.fs import get_legate_paths

    return (
        find_liblgcore(get_legate_paths().legate_lib_path) or
        find_liblgcore(join(dirname(dirname(dirname(lg_path))), "lib")) or
        find_liblgcore(join(dirname(dirname(sys.executable)), "lib")) or
        ""
    )


libpath: str = get_libpath("@legate_core_LIB_NAME@", "@legate_core_FULL_LIB_NAME@")

